<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnePlayer"
    android:id="@+id/my_layout"
    android:background="@color/dark_one">

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:textColor="@color/dark_three"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You V/S Computer"
        android:textColor="@color/dark_four"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/grid"
        android:layout_marginBottom="100sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="30sp"/>


    <LinearLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/dark_three"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="310sp"
            android:layout_height="100sp">

            <ImageView
                android:id="@+id/iv1"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"/>

            <ImageView
                android:id="@+id/iv2"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/iv3"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5sp"
            android:layout_width="310sp"
            android:layout_height="100sp">

            <ImageView
                android:id="@+id/iv4"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"/>

            <ImageView
                android:id="@+id/iv5"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/iv6"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5sp"
            android:layout_width="310sp"
            android:layout_height="100sp">

            <ImageView
                android:id="@+id/iv7"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"/>

            <ImageView
                android:id="@+id/iv8"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/iv9"
                android:background="@color/dark_one"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/result"
        android:layout_width="310sp"
        android:layout_height="310sp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@id/start"
        android:layout_below="@id/grid"
        android:layout_marginTop="100sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new game"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>